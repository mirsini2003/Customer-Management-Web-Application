@{
    ViewData["Title"] = "New Customer Registration";
    Layout = null;
}

<!DOCTYPE html>
<html lang="el">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f3f4f6;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-image: url('/images/background1.jpg');
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }

        .container {
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 100%;
            max-width: 500px;
        }

        h1 {
            text-align: center;
            color: #333333;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
            color: #555555;
        }

        input, select {
            margin-bottom: 15px;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

            input:focus, select:focus {
                outline: none;
                border-color: #007BFF;
                box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            }

        .btn {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 15px;
            font-size: 18px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #389A3C;
            }

        .btn-secondary {
            background-color: #4CAF50;
            color: white;
            margin-top: 10px;
            text-align: center;
            text-decoration: none;
            padding: 10px 15px;
            font-size: 18px;
            border-radius: 5px;
            display: inline-block;
        }

            .btn-secondary:hover {
                background-color: #389A3C;
            }

        .form-group {
            margin-bottom: 15px;
        }

        .error {
            color: red;
            font-size: 14px;
            margin-top: -10px;
            margin-bottom: 10px;
        }

        .bottom-right {
            position: absolute;
            bottom: 4px;
            right: 8px;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            padding: 4px;
            border-radius: 5px;
        }

        .top-left {
            position: absolute;
            top: 10px; 
            left: 10px;
            width: 35px; 
        }
    </style>
</head>
<body>
    <a href="/OnlineHelpSeller.html">
        <img src="/images/lightbulb.png" alt="LOGO" class="top-left">
    </a>
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div style="color: green; margin-bottom: 20px;">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div style="color: red; margin-bottom: 20px;">
                @TempData["ErrorMessage"]
            </div>
        }

        <h1>New Customer Registration</h1>
        <form asp-action="AddCustomer" method="post">
            <div class="form-group">
                <label for="firstName">Name</label>
                <input type="text" id="firstName" name="firstName" placeholder="Enter First Name" required />
            </div>

            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" placeholder="Insert Last Name" required />
            </div>

            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" placeholder="Insert Username" required />
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" placeholder="Insert Password" required />
            </div>

            <div class="form-group">
                <label for="phone">Phone</label>
                <input type="tel" id="phone" name="phone" placeholder="Insert Phone Number" required />
            </div>

            <div class="form-group">
                <label for="plan">Select Program</label>
                <select id="plan" name="plan" required>
                    <option value="">Select Program</option>
                    @foreach (var program in ViewBag.ProgramNames)
                    {
                        <option value="@program">@program</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn" style="background-color: #4caf50;">Registration</button>
            <a asp-controller="Home" asp-action="Index1" class="btn-secondary">Menu</a>
        </form>
    </div>
    <div class="bottom-right">
        <strong>Contact:</strong> <br>
        Phone: 210-1234567 <br>
        Email: <a href="mailto:unipi@gmail.com">unipi@gmail.com</a>
    </div>
</body>
</html>
